<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>AdSimulator — Demo Ads</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>html{font-family:Inter,ui-sans-serif,system-ui,-apple-system,"Segoe UI",Roboto,"Helvetica Neue",Arial}</style>
  </head>
  <body class="bg-slate-50 text-slate-700">
    <main class="max-w-7xl mx-auto px-6 py-12">
      <header class="mb-10">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl text-slate-900 font-semibold tracking-tight">AdSimulator</h1>
            <p class="mt-1 text-slate-500">A small demo ad-serving stack — browse ads, test click tracking, and iterate on bidding algorithms.</p>
          </div>
          <div class="text-sm text-slate-500">User: <strong class="text-slate-900"><%= userId %></strong></div>
        </div>
      </header>

      <section class="mb-10">
        <h2 class="text-xl text-slate-900 font-semibold tracking-tight">Featured Ads</h2>
        <p class="mt-2 text-slate-500">Below are up to two ads selected by the bid engine for this placement.</p>

        <% if (ads.length === 0) { %>
          <div class="mt-6 text-sm text-slate-500">No ads returned for the current placement.</div>
        <% } else { %>
          <div class="mt-6 grid grid-cols-1 md:grid-cols-2 gap-6">
            <% ads.forEach(function(ad) { %>
              <article class="bg-white border border-slate-200 rounded-xl shadow-sm overflow-hidden hover:border-indigo-500 transition-colors duration-150">
                <div class="flex flex-col md:flex-row">
                  <div class="md:w-1/3 bg-slate-100">
                    <img src="<%= ad.adContent?.imageUrl %>" alt="<%= ad.adContent?.title %>" class="w-full h-full object-cover" />
                  </div>
                  <div class="p-5 md:w-2/3">
                    <h3 class="text-lg text-slate-900 font-semibold tracking-tight"><%= ad.adContent?.title || 'Sponsored' %></h3>
                    <p class="mt-2 text-slate-500"><%= ad.adContent?.description || '' %></p>
                    <div class="mt-4 flex items-center justify-between">
                      <div class="text-sm text-slate-500">Bid: <strong class="text-slate-900"><%= ad.bidPrice %></strong></div>
                      <a class="inline-block px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700" href="/click?redirect=<%= encodeURIComponent(ad.adContent?.redirectUrl) %>&campaignId=<%= ad.campaignId %>&adId=<%= ad.adId %>&userId=<%= userId %>">Open Ad</a>
                    </div>
                  </div>
                </div>
              </article>
            <% }) %>
          </div>
        <% } %>
      </section>

      <section class="mb-12">
        <div class="flex items-center justify-between">
          <h2 class="text-xl text-slate-900 font-semibold tracking-tight">Video Library</h2>
          <p class="text-sm text-slate-500">Click a video to watch (simulated).</p>
        </div>
        <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          <% videos.forEach(function(video) { %>
            <a href="/video/<%= video.id %>" class="group block bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm hover:border-indigo-500 transition-colors duration-150">
              <div class="aspect-video bg-slate-200">
                <img src="https://picsum.photos/seed/<%= video.id %>/640/360" alt="<%= video.title %>" class="w-full h-full object-cover" />
              </div>
              <div class="p-4">
                <h3 class="text-sm text-slate-900 font-semibold tracking-tight"><%= video.title %></h3>
                <p class="mt-1 text-xs text-slate-500">Simulated • <span class="text-indigo-600">Watch</span></p>
              </div>
            </a>
          <% }) %>
        </div>
      </section>

      <footer class="text-sm text-slate-500 mt-12">AdSimulator — Local demo • <a href="/" class="text-slate-700 underline">Refresh</a></footer>
    </main>
  </body>
</html>
